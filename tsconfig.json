{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "lib": ["dom", "es5", "es2015.promise"],
        "declaration": false,
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "baseUrl": "./src",
        "paths": { "~/": ["./src"] }
    }
}